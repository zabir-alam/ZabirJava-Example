	http://www.springframework.org/schema/aop 
	http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">

	<!-- Configure DriverManagerDataSource -->
	<bean class="org.springframework.jdbc.datasource.DriverManagerDataSource"
		name="dmds">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="system" />
		<property name="password" value="manager" />
	</bean>

	<!-- Configure AnnotationSessionFactoryBean -->
	<bean
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean"
		name="asfb">
		<property name="dataSource" ref="dmds" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect"> org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>com.ven.model.Location</value>
				
			</list>
		</property>
	</bean>

	<!-- HibernateTemplate Object Configuration -->
	<bean class="org.springframework.orm.hibernate3.HibernateTemplate"
		name="ht">
		<property name="sessionFactory" ref="asfb" />
	</bean>

	<!-- ViewResolver Configuration -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsps/" />
		<property name="suffix" value=".jsp"></property>
	</bean>
	
	
